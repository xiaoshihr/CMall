      <a href="@Url.Action("product", "catalog", new RouteValueDictionary { { "pid", row["pid"] } })"><img src="@{@WorkContext.ImageCDN}/upload/store/@row["storeid"]/product/show/thumb60_60/@row["showimg"]"></a>
