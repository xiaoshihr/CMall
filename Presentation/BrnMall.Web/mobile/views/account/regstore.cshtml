@model BrnMall.Web.Mobile.Models.RegStoreModel
@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>商家入驻-@{@WorkContext.MallConfig.SiteTitle}</title>
    @Html.Raw(WorkContext.MallConfig.SEOKeyword)
    @Html.Raw(WorkContext.MallConfig.SEODescription)
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link href="@{@WorkContext.CSSCDN}/mobile/css/base.css" rel="stylesheet" type="text/css">
    <link href="@{@WorkContext.CSSCDN}/mobile/css/account.css" rel="stylesheet" type="text/css">
    <script src="@{@WorkContext.ScriptCDN}/mobile/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/mobile/scripts/common.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/mobile/scripts/account.js" type="text/javascript"></script>
   
</head>

<body>
@Html.Partial("_header")
<script type="text/javascript">
    $("#headerTitle").html("商家入驻");
</script>


<div class="loginTable">
  <form name="registerForm" action="">
    <div class="itmeC"><input type="text" class="text" name="StoreName" placeholder="店铺名称" /></div>
    <div class="itmeC">@Html.DropDownListFor(x => x.StoreIid, ViewData["storeIndustryList"] as List<SelectListItem>@Html.ValidationMessageFor(x => x.StoreIid)</div>
    <div class="itmeC"><input type="text" class="text" name="Mobile" placeholder="手机号码" /></div>
      <div class="itmeC"><input type="text" class="text" name="Phone" placeholder="固定电话" /></div>
      <div class="itmeC"><input type="text" class="text" name="QQ" placeholder="腾讯QQ" /></div>
      <div class="itmeC">
          <select class="provinceSelect" id="provinceSelect">
              <option selected="selected" value="-1">请选择区域</option>
          </select>
          <select class="citySelect" id="citySelect">
              <option selected="selected" value="-1">请选择</option>
          </select>
          <select class="countySelect" id="countySelect" name="regionid">
              <option selected="selected" value="-1">请选择</option>
          </select>
      </div>
      <div class="itmeC">
          <label>个人</label>
          <label>公司</label>
      </div>
      <div class="itme"><div class="itmeC"><input type="text" class="text" name="verifyCode" style="width:100px; float:left;" placeholder="请输入验证码" /><img id="verifyImage" src="/mob/tool/verifyimage" onclick="this.src='/mob/tool/verifyimage?time=' + new Date()" style="width:100px; margin:0 10px; float:left; height:40px;" /><a href="javascript:void(0)" onclick="document.getElementById('verifyImage').src='/mob/tool/verifyimage?time=' + new Date()" class="left" style="line-height:40px;">换一张</a></div></div>

      <div class="itmeC"><a href="javascript:regstore()" class="redBt" style="display:block; padding:0; height:38px; width:99%; text-align:center; line-height:38px;">注册</a></div>
</form>
</div>

</body>
</html>
